<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >
    <!--tools:context="medialabs.nbcu.com.diagtool.MainActivity"-->

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_dialog_info"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="0.99"
        app:layout_constraintVertical_bias="0.93" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="444dp"
        android:layout_height="270dp"
        android:id="@+id/RightSide"
        android:layout_marginTop="192dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginEnd="336dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="336dp">

        <TextView
            android:text=""
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:id="@+id/dataControlIP" />

        <TextView
            android:text=""
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:id="@+id/dataDeviceID" />

        <TextView
            android:text=""
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:id="@+id/dataEdgeIP" />

        <TextView
            android:text=""
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:id="@+id/dataEdgeLocation" />
        <TextView
            android:text=""
            android:layout_width="450dp"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:id="@+id/dataClientLocation" />

        <TextView
            android:text=""
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:id="@+id/dataDistance" />

        <TextView
            android:text=""
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:id="@+id/dataTotalStreams" />

        <TextView
            android:text=""
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:id="@+id/dataStreamId" />

        <TextView
            android:text=""
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:id="@+id/dataNetiLogin" />


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="192dp"
        android:layout_height="283dp"
        android:id="@+id/LeftSide"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="192dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0">

        <TextView
        android:text="Control IP:"
        android:layout_height="30dp"
        android:id="@+id/lblControlIP"
        android:textStyle="normal|bold"
        android:textSize="18sp"
            android:layout_width="wrap_content" />

        <TextView
            android:text="Android Device ID:"
            android:layout_height="30dp"
            android:id="@+id/lblDeviceID"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:layout_width="wrap_content" />


        <TextView
            android:text="Last Edge IP:"
            android:layout_height="30dp"
            android:id="@+id/lblEdgeIP"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:layout_width="wrap_content" />

        <TextView
            android:text="Last Edge Location:"

            android:layout_height="30dp"
            android:id="@+id/lblEdgeLocation"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:layout_width="wrap_content" />

        <TextView
            android:text="Client GPS Location:"

            android:layout_height="30dp"
            android:id="@+id/lblClientLocation"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:layout_width="wrap_content" />

        <TextView
            android:text="Calculated Distance:"

            android:layout_height="30dp"
            android:id="@+id/lblDistance"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:layout_width="wrap_content" />

        <TextView
            android:text="Device Total Streams:"
            android:layout_height="30dp"
            android:id="@+id/lblDeviceStreams"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:layout_width="wrap_content" />

        <TextView
            android:text="Last Stream Id:"
            android:layout_height="30dp"
            android:id="@+id/lblLastStreamId"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:layout_width="wrap_content" />

        <TextView
            android:text="Neti Login : Edge"
            android:layout_height="30dp"
            android:id="@+id/lblNetiLogin"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:layout_width="wrap_content" />



    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="295dp"
        android:layout_height="291dp"
        android:id="@+id/TopSide"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="344dp"
        android:layout_marginStart="728dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="728dp">

        <LinearLayout
            android:layout_width="305dp"
            android:layout_height="271dp"
            android:id="@+id/TopSideButtons"
            android:weightSum="1">

            <TextView
                android:text="Location:"
                android:layout_height="30dp"
                android:id="@+id/lblGPS"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:layout_width="wrap_content" />
            <RadioGroup
                android:id="@+id/radioLocationChoice"
                android:layout_width="176dp"
                android:layout_height="170dp"
                android:layout_weight="0.01">

            <RadioButton
                android:text="Use GPS"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioGPS"
                android:layout_weight="1" />

            <RadioButton
                android:text="Philadelphia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioPhila"
                android:layout_weight="1" />

            <RadioButton
                android:text="Seattle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioSeattle"
                android:layout_weight="1" />

            <RadioButton
                android:text="Los Angeles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioLA"
                android:layout_weight="1" />

            <RadioButton
                    android:text="Cleveland"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioOH"
                    android:layout_weight="1" />

            <RadioButton
                android:text="Round Robin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioRoundRobin"
                android:layout_weight="1" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <android.support.design.widget.AppBarLayout
        android:layout_width="1024dp"
        android:layout_height="60dp"
        android:theme="@style/AppTheme.AppBarOverlay"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0"
        android:weightSum="1"
        android:id="@+id/appBarLayout2">

        <TextView
            android:text="Stream Diagnostic Tool"
            android:layout_height="50dp"
            android:id="@+id/lblAppName"
            android:textStyle="normal|bold"
            android:textSize="32sp"
            android:layout_weight="0.20"
            android:paddingLeft="40dp"
            android:paddingTop="10dp"
            android:layout_width="450dp" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="161dp"
        android:id="@+id/BottomSide2"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="56dp"
        android:layout_marginEnd="560dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="560dp">

        <Button
            android:text="Start Stream"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/butStream"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="151dp"
        android:id="@+id/BottomSide"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="56dp"
        android:layout_marginStart="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="48dp"
        app:layout_constraintRight_toLeftOf="@+id/BottomSide2"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.3">

        <Button
            android:text="Query Data"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/butQuery"
            android:layout_weight="1" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>